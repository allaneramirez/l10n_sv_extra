<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- $$$$$$$$$$$$$   REPORTE DE VENTAS$$$$$$$$$$$$$$$$$$$-->
        <record id="asistente_ventas_reporte" model="ir.ui.view">
            <field name="name">l10n_sv_extra.asistente_reporte_ventas</field>
            <field name="model">l10n_sv_extra.asistente_reporte_ventas</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Seleccione diario peridodos">
                    <group>
                        <group>
                            <field name="folio_inicial"/>
                            <field name="impuesto_id"/>

                        </group>
                        <group>
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>

                    <separator colspan="4" string="Diarios"/>
                    <field name="diarios_id" nolabel="1" domain="[('type','in',['sale','sale_refund'])]"/>

                    <group>
                        <field name="name" invisible="1"/>
                        <field name="archivo" readonly="1" filename="name"/>
                    </group>
                    <footer>
                        <button name="print_report_excel_contribuyente" string="Reporte contribuyente" type="object"
                                class="oe_highlight"/>
                        <button name="print_report_excel_consumidor" string="Reporte consumidor" type="object"
                                class="oe_highlight"/>
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <menuitem id="menu_informes" name="Informes de El Salvador" parent="account.menu_finance_reports"/>

         <record id="action_reporte_ventas_sv" model="ir.actions.act_window">
            <field name="name">Libro de Ventas SV</field>
            <field name="res_model">l10n_sv_extra.asistente_reporte_ventas</field>
            <field name="binding_model_id" ref="account.model_account_journal"/> <!-- Modelo vinculado -->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem
                action="action_reporte_ventas_sv"
                id="menu_asistente_reporte_ventas"
                parent="menu_informes"
                groups="l10n_sv.group_fel_restricted_fields_sv"/>

        <record id="action_reporte_ventas" model="ir.actions.report">
            <field name="name">Libro de Ventas</field>
            <field name="model">l10n_sv_extra.asistente_reporte_ventas</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_sv_extra.reporte_ventas</field>
            <field name="file">l10n_sv_extra.reporte_ventas</field>
        </record>
        <!--  ###################### REPORTE COMPRAS ##################################-->
        <record id="asistente_compras_reporte" model="ir.ui.view">
            <field name="name">l10n_sv_extra.asistente_reporte_compras</field>
            <field name="model">l10n_sv_extra.asistente_reporte_compras</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Seleccione diario y rango de fecha">
                    <group>
                        <group>
                            <field name="folio_inicial"/>
                            <field name="impuesto_id"/>
                        </group>
                        <group>
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>

                    <separator colspan="4" string="Diarios"/>
                    <field name="diarios_id" nolabel="1"
                           domain="[('type','in',['purchase','purchase_refund'])]"/>


                    <group>
                        <field name="name" invisible="1"/>
                        <field name="archivo" readonly="1" filename="name"/>
                    </group>

                    <footer>
                        <!--                        <button name="print_report" string="Reporte" type="object" class="oe_highlight"/>-->
                        <button name="print_report_excel" string="Reporte excel" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

