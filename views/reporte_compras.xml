<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="reporte_compras">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="20"/>
            <t t-set="data_report_header_spacing" t-value="10"/>
            <div class="header">
                Folio:
                <span class="page" t-esc="data['folio_inicial']-1"></span>
            </div>
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="row mt0 mb16">
                        <div class="col-12" style="font-size:14px; text-align:center;">
                            <span t-field="user.company_id.partner_id.name"/>
                            <br/>
                            LIBRO COMPRAS
                            <br/>
                            NIT:
                            <span t-field="user.company_id.partner_id.vat"/>
                            <br/>
                            NRC:
                            <span t-field="user.company_id.partner_id.numero_registro"/>
                            <br/>
                            MES:
                            <span t-esc="mes(data['fecha_desde'][5:7])"/>
                            <span t-esc="data['fecha_desde'][0:4]"/>
                            <br/>
                        </div>
                        <br/>
                        <br/>
                    </div>

                    <t t-set="result" t-value="lineas(data)"/>

                    <table class="table table-sm" style="font-size:11px">
                        <thead>
                            <tr>
                                <th>No.<br/>Cor.
                                </th>
                                <th>Fecha</th>
                                <th>No. de<br/>comprob.
                                </th>
                                <th>NIT</th>
                                <th>Número de<br/>registro
                                </th>
                                <th>Nombre del proveedor
                                </th>
                                <th>Compra<br/>exenta
                                    <br/>
                                    intern
                                </th>
                                <th>Compra<br/>exenta
                                    <br/>
                                    import
                                </th>
                                <th>Compra<br/>gravada
                                    <br/>
                                    intern
                                </th>
                                <th>Compra<br/>gravada
                                    <br/>
                                    import
                                </th>
                                <th>IVA</th>
                                <th>Percepcion</th>
                                <th>Retención</th>
                                <th>Retención 2%</th>
                                <th>Total<br/>compras
                                </th>
                                <th>IVA<br/>terceros
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="result['lineas']" t-as="l">
                                <td>
                                    <span t-esc="l['correlativo']"/>
                                </td>
                                <td>
                                    <span t-esc="l['fecha']" t-options='{"widget": "date"}'/>
                                </td>
                                <td>
                                    <span t-esc="l['numero']"/>
                                </td>
                                <td>
                                    <span t-esc="l['proveedor'].vat"/>
                                </td>
                                <td>
                                    <span t-esc="l['proveedor'].numero_registro"/>
                                </td>
                                <td>
                                    <span t-esc="l['proveedor'].name"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="0.00"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="0.00"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['compra'] + l['servicio']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['importacion']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['iva']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['percepcion']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['compra_exento']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="0.00"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['total']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="0.00"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                            <tr style="font-size:10px">
                                <td>
                                </td>
                                <td>
                                </td>
                                <td>
                                </td>
                                <td>
                                </td>
                                <td>
                                </td>
                                <td>
                                    <strong>
                                        TOTALES
                                    </strong>
                                </td>
                                <td class="text-right">
                                    <span t-esc="0.00"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="0.00"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['neto'] + result['totales']['servicio']['neto']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['importacion']['neto']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['combustible']['iva'] + result['totales']['importacion']['iva']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['percepcion'] + result['totales']['servicio']['percepcion'] + result['totales']['combustible']['percepcion'] + result['totales']['importacion']['percepcion']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['exento']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="0.00"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['total'] + result['totales']['servicio']['total'] + result['totales']['combustible']['total'] + result['totales']['importacion']['total'] + result['totales']['compra']['exento']"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="0.00"
                                          t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <br/>
                    <br/>
                    <table class="table table-sm">
                        <tr>
                            <td style="width:250px">
                                <strong>TOTAL COMPRAS</strong>
                            </td>
                            <td style="width:100px" class="text-right"></td>
                            <td style="width:250px" class="text-right"></td>
                            <td style="width:100px" class="text-right"></td>
                        </tr>
                        <tr>
                            <td>
                                <strong>TOTAL N/C</strong>
                            </td>
                            <td class="text-right"></td>
                            <td class="text-right"></td>
                            <td class="text-right"></td>
                        </tr>
                        <tr>
                            <td>
                                <strong>COMPRAS GRAVADAS</strong>
                            </td>
                            <td class="text-right"></td>
                            <td class="text-right"></td>
                            <td class="text-right"></td>
                        </tr>
                        <tr>
                            <td>
                                <strong>IVA GRAVADO</strong>
                            </td>
                            <td class="text-right"></td>
                            <td>PERCEPCION 1%</td>
                            <td class="text-right"></td>
                        </tr>
                        <tr>
                            <td>
                                <strong>COMPRAS EXENTAS</strong>
                            </td>
                            <td class="text-right"></td>
                            <td>
                                <strong>ANT. A CTA. IVA 2%</strong>
                            </td>
                            <td class="text-right"></td>
                        </tr>
                        <tr>
                            <td>
                                <strong>NO SUJETAS</strong>
                            </td>
                            <td class="text-right"></td>
                            <td>
                                <strong>IVA TERCEROS</strong>
                            </td>
                            <td class="text-right"></td>
                        </tr>
                        <tr>
                            <td>
                                <strong>TOTAL DE COMPRAS</strong>
                            </td>
                            <td class="text-right"></td>
                            <td>
                                <strong>TOTAL DE IMPUESTOS</strong>
                            </td>
                            <td class="text-right"></td>
                        </tr>
                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>
